@model IEnumerable<Rocosa.Models.TipoAplicacion>
@{
    ViewData["Title"] = "Ambiente Ceramico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Ambiente Cerámico</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Listado Tipos de Aplicación</h2>
        </div>
        <div class="col-6 text-end">            
            <a class="btn btn-primary" asp-controller="TipoAplicacion" asp-action="Crear">
                <i class="fas fa-plus"></i> Nueva Tipo</a>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>           
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th width="70%">@item.Nombre</th>
                            <th class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a class="btn btn-primary mx-2" asp-controller="TipoAplicacion" asp-action="Editar" asp-route-Id="@item.Id">
                                         Editar <i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger mx-2" asp-controller="TipoAplicacion" asp-action="Eliminar" asp-route-Id="@item.Id">
                                         Eliminar <i class="fas fa-trash"></i></a>
                                </div>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay Registro de Tipo de Aplicacion</p>
        }

    </div>

</div>




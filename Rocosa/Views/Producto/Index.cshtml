@model IEnumerable<Rocosa.Models.Producto>
@{
    ViewData["Title"] = "Ambiente Ceramico Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Ambiente Cerámico</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">            
            <a class="btn btn-primary" asp-controller="Producto" asp-action="Upsert">
                <i class="fas fa-plus"></i> Nuevo Producto</a>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Categoria</th>
                        <th>Tipo de Aplicacion</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th width="20%">@item.NombreProducto</th>
                            <th width="10%">@item.Precio</th>
                            <th width="20%">@item.Categoria.NombreCategoria</th>
                            <th width="20%">@item.TipoAplicacion.Nombre</th>
                            <th class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a class="btn btn-primary mx-2" asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id">
                                         Editar <i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger mx-2" asp-controller="Eliminar" asp-action="Eliminar" asp-route-Id="@item.Id">
                                         Eliminar <i class="fas fa-trash"></i></a>
                                </div>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay Registro de Productos</p>
        }

    </div>

</div>




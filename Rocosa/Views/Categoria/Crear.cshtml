@model Rocosa.Models.Categoria

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Crear">    
    <div class="border p-3 ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Nueva Categoria</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                     <label asp-for="NombreCategoria" class="control-label"></label>
                     <input asp-for="NombreCategoria" class="form-control" />
                     <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                     <label asp-for="MostrarOrden" class="control-label"></label>
                     <input asp-for="MostrarOrden" class="form-control" />
                     <span asp-validation-for="MostrarOrden" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a class="btn btn-success" asp-controller="Categoria" asp-action="Index">Regresar</a>
            </div>
        </div>
   </div>
</form>


@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}